<!-- <div class="row"></div> --> <!-- no responsive layout -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1"> <!-- responsive layout -->
    <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-link" >
             <!-- card element from bootstrap -->
            <div class="card">
                <img 
                    src="<%= listing.image  %>" 
                    class="card-img-top" 
                    alt="listing_image" 
                    style="height: 20rem;"
                />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <!-- <h5 class="card-title">Card title</h5> -->
                    <p class="card-text">
                        <b><%= listing.title %></b>
                        <br>
                        &#8377 <%=  listing.price.toLocaleString("en-IN") %> / night
                    </p>
                    <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                </div>
            </div>
        </a>
       
    <%  } %>
</div>



